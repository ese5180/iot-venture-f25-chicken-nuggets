/* ============================================================
 *  I2C1 — ACTIVE DEVICE
 *  Using P0.26 (SDA) and P0.27 (SCL)
 * ============================================================ */

&i2c1 {
    status = "okay";
    compatible = "nordic,nrf-twim";

    pinctrl-0 = <&i2c1_default>;
    pinctrl-1 = <&i2c1_sleep>;
    pinctrl-names = "default", "sleep";

    clock-frequency = <I2C_BITRATE_STANDARD>;

    /* APDS9960 Color Sensor */
    apds9960@39 {
        compatible = "avago,apds9960";
        reg = <0x39>;
        label = "APDS9960";
        status = "okay";

        /* INT pin stays on P0.04 unless you want to change it */
        int-gpios = <&gpio0 4 GPIO_ACTIVE_LOW>;
    };
};

/* ============================================================
 *  Pin Control Section
 *  Only I2C1 pins are active.
 *  SPI1 pinctrl preserved but commented out.
 * ============================================================ */

&pinctrl {

